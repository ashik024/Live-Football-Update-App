<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="15dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/gradiant"

        >

        <ImageView
            android:id="@+id/hlogo"
            android:layout_width="30dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:padding="2dp" />

        <ImageView
            android:id="@+id/alogo"
            android:layout_width="30dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="2dp" />

        <TextView
            android:id="@+id/hname"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/hlogo"
            android:text="Arsenal"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#ffff"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/score"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/hname"
            android:text="3-0"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#ffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aname"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/alogo"
            android:layout_toRightOf="@+id/score"
            android:text="Manchester United"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#ffff"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/league"
            android:layout_width="70dp"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"

            android:text="EPL"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#ffff"
            android:textSize="6sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/htscore"
            android:layout_width="70dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/score"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="65dp"
            android:text="2-0"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#ffff"
            android:textSize="10sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/date"
            android:layout_width="70dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/htscore"
            android:layout_centerHorizontal="true"

            android:text="2020.10.5"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#ffff"
            android:textSize="10sp"
            android:layout_marginTop="10dp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/hgoalscorer"
            android:layout_width="70dp"
            android:layout_height="50dp"






            android:layout_marginLeft="28dp"
            android:layout_below="@+id/htscore"

            android:text="Aubamiyang"
            android:textAlignment="center"
            android:textAllCaps="true"

            android:textColor="#ffff"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/agoalscorer"
            android:layout_width="70dp"
            android:layout_height="50dp"

            android:layout_below="@+id/htscore"
            android:layout_marginLeft="20dp"



            android:layout_toRightOf="@+id/score"
            android:text="Null"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#ffff"


            android:textSize="10sp"
            android:textStyle="bold" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>